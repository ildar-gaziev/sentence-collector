{
    "manifest_version": 3,
    "name": "Sentence → Side Panel",
    "version": "1.0.1",
    "permissions": [
        "contextMenus",
        "scripting",
        "activeTab",
        "sidePanel",
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true,
            "match_about_blank": true
        }
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Sentence → Side Panel"
    }
}